# Copy this file to .env and fill in your own values.
# Example: cp .env.example .env

# Flask session secret. Use a long random string in production.
FLASK_SECRET=dev-change-me

# Google OAuth client secrets file path and redirect URI.
GOOGLE_CLIENT_SECRETS=client_secret.json
GOOGLE_REDIRECT_URI=http://127.0.0.1:5000/oauth2callback

OPENAI_API_KEY=sk-proj-...your-actual-key...
OPENAI_MODEL=gpt-4o-mini

# Task provider configuration.

DEFAULT_TASK_PROVIDER=google_tasks

TASKS_LIST_TITLE=Email_Tasks


# Storage and fetch behaviour.
PROCESSED_STORE=processed.json
FETCH_LIMIT=10



DATABASE_URL=postgresql+psycopg2://<user>:<pass>@<host>:5432/<db_name>
# e.g. DATABASE_URL=postgresql+psycopg2://taskflow:taskflow@localhost:5432/taskflow

